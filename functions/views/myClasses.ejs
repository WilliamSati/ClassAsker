 <% include navigation.ejs %>


    <div class="section">
	</div>

	<div class="container">


		<div class="row">
			<div class="col s1">
				<a href="#addClassPopUp" class="btn-floating btn-large red modal-trigger tooltipped" data-position="top" data-tooltip="Create a class"><i class="material-icons">add</i></a>
			</div>
			<div class="col s2">
				<a href="#joinClassPopUp" class="btn-floating btn-large blue lighten-2 modal-trigger tooltipped" data-position="top" data-tooltip="Join an existing class"><i class="material-icons">merge_type</i></a>
			</div>
		</div>

		<div>
			<ul class="collection with-header classes">
					<li class="collection-header"><h4>My Classes</h4></li>

			</ul>
		</div>

		<div class="bottomInstructions">
		</div>
	</div>
	
	<div class="modal" id="addClassPopUp">
     <div class="modal-content input-field">
	   <div class="modal-content">
		  <input placeholder="Class Name" id="classInput" type="text" class="validate">
          <button id="btnClassSubmit" class="modal-close btn-action btn">Add</button>
	   </div>
	</div>
   </div>

   <div class="modal" id="joinClassPopUp">
     <div class="modal-content input-field">
	   <div class="modal-content">
		  <input placeholder="Class Name" id="joinClassInput" type="text" class="validate">
          <button id="btnJoinClassSubmit" class="modal-close btn-action btn">Join</button>
	   </div>
	</div>
   </div>
   
   <div class="modal" id="classDoesNotExitPopUp">
     <div class="modal-content input-field">
	   <div class="modal-content">
	   <h5>The class you searched for hasn't been created yet. You can click the red + to  create it.</h5>
	   </div>
	</div>
   </div>

    <div class="modal" id="documentAlreadyExists">
     <div class="modal-content input-field">
	   <div class="modal-content">
	   <h5>This class already exists. You can join it by clicking the blue merge arrow</h5>
	   </div>
	</div>
   </div>

   <div class="modal" id="classNoLongerExists">
     <div class="modal-content input-field">
	   <div class="modal-content">
	   <h5>This class no longer Exists. Please remove it from your class List by clicking the 'remove' button</h5>
	   </div>
	</div>
   </div>

   

